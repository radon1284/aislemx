<p id="notice"><%= notice %></p>

<h1>Listing Stores <span class="pull-right"><%= link_to 'New Store', new_store_path, class: "btn btn-primary" %></span></h1>
 <div class="panel-group" id="accordion">
 <% @stores.each do |store| %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= store.id %>">
        <%= store.store_name %> </a> <span class="pull-right"><%= link_to 'View', store, class: "btn btn-info btn-xs" %> <%= link_to 'Edit', edit_store_path(store), class: "btn btn-primary btn-xs" %> <%= link_to 'Delete', store, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></span>
      </h4>
    </div>
    <div id="collapse<%= store.id %>" class="panel-collapse collapse ">
      <div class="panel-body"><%= store.store_location %></div>
    </div>
  </div>
  <% end %>
</div> 
